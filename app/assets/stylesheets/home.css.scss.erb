footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  ul {
  margin-bottom: 52px; 
  padding-left: 17px;
  display: flex;
  display: -ms-flexbox;
  display: -webkit-flex;
  justify-content: space-around;
  -webkit-justify-content: space-around;
    li{
    display: inline-block;
    color:  #ffffff;
    font-size: 26px; /* Приближение из-за подстановки шрифтов */
    font-weight: 300;
    position: relative;
      a {
        text-decoration: none;
        color: #ffffff;
        &::before {
        content: "";
        background: $sprite;
        position: absolute;
        display: block;
        height: 37px;
        width: 35px;
        left: -43px;
        top: -4px;
        }
      }
    }
  .mail::before {
    background-position: -1px 0px;
    content: "";
    background: $sprite;
    position: absolute;
    display: block;
    height: 37px;
    width: 36px;
    left: -43px;
    top: -4px;
    }
  #behance::before {
    background-position: -71px 0px;
    left: -35px;
    }
  #facebook::before {
    background-position: -36px -1px;
    left: -35px;
    height: 36px;
    }
  .phone::before {
    background-position: -107px 0px;
    content: "";
    background: $sprite;
    position: absolute;
    display: block;
    height: 37px;
    width: 35px;
    left: -43px;
    top: -4px;
    }
  }
}

#behance, #facebook {
  width: 108px;
  display: block;
  text-align: right;
}
#facebook {
  width: 122px;
  &:hover::before {
    background-position: -36px -37px;
  }
}
#behance {
  &:hover::before {
    background-position: -71px -37px;
  }
}
