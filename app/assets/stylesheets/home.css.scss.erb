@import url(http://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic);
$sprite: url(<%= asset_path 'sprite.svg' %>);


body {
	margin: 0;
	font-family: 'Roboto'; 
}

#main { 
  background: url(main.jpg) 50% 0 repeat fixed; min-height: 480px; 
  min-height: 900px
}

#main, #design, #skills, #interests, #benefits, #contacts {
  margin: 0 auto; 
  width: 100%; 
  position: relative;
  background-size: cover; 
}

#design, #skills, #interests, #benefits {
	// ставити реальну висоту картинок
	height: 480px; 
}

#contacts {
	height: 960px;
	background: url(contacts.jpg) 50% 0 no-repeat fixed; 
  background-size: cover;  
}

#design {
	background: url(design.jpg) 50% 0 no-repeat fixed; 
  background-size: cover; 
}

#skills {
	background: url(skills.jpg) 50% 0 no-repeat fixed;
  background-size: cover;  
}

#interests {
	background: url(interests.jpg) 50% 0 no-repeat fixed; 
  background-size: cover;  
}

#benefits {
	background: url(benefits.jpg) 50% 0 no-repeat fixed;
  background-size: cover;  
}


#white {
	width: 100%;
	height: 700px;
	background-color: white;
  box-sizing: border-box;
}

.white800 {
  height: 800px!important;
}

header {
  position: absolute;
  z-index: 1;
  top: 0px;
  width: 100%;
  overflow: hidden;
  height: 260px;
}

.nav-list {
  position: relative;
  margin-top: 51px;
  padding-left: 0px;
  a {
    text-decoration: none;
    color: white;
    opacity: 0.85;
    &:hover {
      opacity: 1;
    }
  }
  li {
    display: inline-block;
    font-family: 'Roboto';
  	color:  #ffffff;
  	font-size: 22px; 
  	font-weight: 400;
    font-weight: 300;
    margin-left: 50px;
  }
}

#phones {
	float: right;
	margin-top: -4px;
  	margin-right: 52px;
	span {
		color: white;
		font-size: 26px;
		font-weight: 300;
		line-height: 30px;
		text-align: right;
	}
}

.down-arrow {
  background: $sprite;
  background-position: -143px -803px;
  position: absolute;
  display: block;
  height: 25px;
  width: 73px;
  z-index: 5;
  margin-left: auto;
  margin-right: auto;
  bottom: 10%;
  left: 0;
  right: 0;
  //   &:hover {
  //   background-position: -143px -844px;
  // }
}

@keyframes fly {
   0%, 100% {transform: translateX(0);}
   10%, 30%, 50%, 70%, 90% {transform: translateY(-12px);}
   0%, 20%, 40%, 60%, 80%, 100% {transform: translateY(0);}
 }
 .fly {
  animation: fly 12s infinite ease-in-out;
  }

.title {
  border-width: 12px;
  border-color:  #ffffff;
  border-style: solid;
  margin: 0 auto; 
  width: 680px;
  height: 307px;
